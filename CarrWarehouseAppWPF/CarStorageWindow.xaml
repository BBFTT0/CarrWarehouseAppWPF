<Window x:Class="CarrWarehouseAppWPF.CarStorageWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Хранилище машин" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <ListBox x:Name="carListBox" SelectionChanged="CarListBox_SelectionChanged" Margin="0 0 0 10"/>
            <Button Content="Добавить машину" Click="AddCarButton_Click" Margin="0 0 0 10"/>
            <Button x:Name="editCarButton" Content="Редактировать машину" Click="EditCarButton_Click" Margin="0 0 0 10" IsEnabled="False"/>
            <Button x:Name="deleteCarButton" Content="Удалить машину" Click="DeleteCarButton_Click" Margin="0 0 0 10" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
