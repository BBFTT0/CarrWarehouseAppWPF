<Window x:Class="CarrWarehouseAppWPF.DeleteCarWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Delete Car" Height="150" Width="250">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Car ID:"/>
            <TextBox x:Name="CarIdTextBox" Margin="0,0,0,5"/>
            <Button Content="Delete" Click="DeleteButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
